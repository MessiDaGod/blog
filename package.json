{
	"name": "next-blog",
	"version": "3.1.1",
	"description": "Markdown based blog using next.js",
	"scripts": {
		"runts": "ts-node --transpile-only --project=tsconfig.json",
		"dev": "yarn next dev client",
		"posts": "yarn runts server/build-posts.ts",
		"watch-posts": "while true ; do yarn posts ; inotifywait -r -e modify posts ; done",
		"feed": "yarn runts server/build-feed.ts",
		"typecheck": "tsc",
		"lint": "eslint . --ext .ts,.tsx",
		"build": "rm -rf client/out/* && yarn typecheck && yarn lint && yarn posts && yarn feed && yarn next build client && yarn next export client",
		"commit": "yarn build && ./postprocess.sh"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.15.0",
		"@typescript-eslint/parser": "^4.15.0",
		"comlink": "^4.3.1",
		"eslint-config-prettier": "^8.2.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^6.0.0",
		"lint-staged": ">=8.2.1",
		"next": "^10.1.4-canary.10",
		"prettier": "^2.0.5",
		"processmd": "^4.4.2",
		"standard": "^16.0.3"
	},
	"dependencies": {
		"@babel/core": "^7.4.5",
		"@fortawesome/fontawesome-svg-core": "^1.2.35",
		"@fortawesome/free-regular-svg-icons": "^5.15.3",
		"@fortawesome/free-solid-svg-icons": "^5.15.3",
		"@fortawesome/react-fontawesome": "^0.1.14",
		"@next/bundle-analyzer": "^10.0.6",
		"@types/debounce-promise": "^3.1.3",
		"@types/js-yaml": "^4.0.0",
		"@types/rc-tooltip": "^3.7.1",
		"@types/react": "^17.0.1",
		"@types/react-dom": "^17.0.0",
		"@types/react-modal": "^3.12.0",
		"@types/react-select": "^4.0.15",
		"@types/recharts": "^1.1.16",
		"@types/webpack": "^5.28.0",
		"anchorme": "^2.1.2",
		"babel-loader": "^8.0.6",
		"debounce-promise": "^3.1.2",
		"eslint": "^7.3.1",
		"feed": "^4.0.0",
		"glob": "^7.1.4",
		"js-yaml": "^4.0.0",
		"mobx": "^6.2.0",
		"mobx-react": "^7.1.0",
		"pandoc-filter": "^2.0.0",
		"pandoc-url2cite": "^0.6.4",
		"rc-tooltip": "^5.0.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-katex": "^2.0.2",
		"react-modal": "^3.13.1",
		"react-select": "^4.3.0",
		"react-syntax-highlighter": "^15.4.3",
		"react-visibility-sensor": "^5.1.1",
		"recharts": "^2.0.0-beta.1",
		"remark-frontmatter": "^3.0.0",
		"remark-parse": "^9.0.0",
		"remark-react": "^8.0.0",
		"remark-stringify": "^9.0.1",
		"sass": "^1",
		"sql.js-httpvfs": "^0.8.6",
		"strip-markdown": "^4.0.0",
		"tachyons": "^4.11.1",
		"ts-loader": "^9.1.1",
		"ts-node": "^9.1.1",
		"tsconfig-paths-webpack-plugin": "^3.2.0",
		"typescript": "^4.1.5",
		"unified": "^9.0.0",
		"url-loader": "^4.1.0",
		"val-loader": "^3.0.0",
		"webpack": "^5.21.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx,css,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"semi": false,
		"tabWidth": 4,
		"useTabs": true,
		"trailingComma": "all",
		"printWidth": 80,
		"endOfLine": "lf"
	},
	"babel": {
		"presets": [
			"next/babel",
			"@zeit/next-typescript/babel"
		]
	}
}
